
@{
    ViewData["Title"] = "CreateMission";
}
@model BusinessProcessManagementSampleProject.Models.Mission.MissionCreateViewModel

<div class="col-12">
    <div class="rosettaGuideTxt">
        @if (TempData["successCreateOrEdit"] != null)
        {
            if ((bool)TempData["successCreateOrEdit"] == true)
            {
                <p class="alert alert-success">@TempData["messageCreateOrEdit"]</p>
            }
            else
            {
                <p class="alert alert-danger">@TempData["messageCreateOrEdit"]</p>
            }

        }
    </div>
</div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<div class="bg-white w-100 shadow p-3">
    <h3 class="text-center">Görev Ekle</h3>
    <form asp-controller="Mission" asp-action="CreateMission" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" asp-for=Id id="inputTitle" hidden>
        </div>
        @if (Model!=null)
        {
            <div class="form-group">
                <label for="inputUserName" class="font-weight-bold">Öğrenci No</label>
                <input type="text" class="form-control" asp-for=StudentNumber id="inputTitle" disabled>
                <span asp-validation-for="@Model.StudentNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputUserName" class="font-weight-bold">Öğrenci İsmi</label>
                <input type="text" class="form-control" asp-for=StudenFullName id="inputTitle" disabled>
            </div>
            <div class="form-group">
                <label for="inputUserName" class="font-weight-bold">Proje</label>
                <select asp-for="@Model.ProjectId" asp-items="ViewBag.ProjectSelectListItems" disabled class="form-control"></select>
                <span asp-validation-for="@Model.ProjectId" class="text-danger"></span>
            </div> }
        else
        {
            <div class="form-group">
                <label for="inputUserName" class="font-weight-bold">Öğrenci No</label>
                <input type="text" class="form-control" asp-for=StudentNumber id="inputTitle" required>
                <span asp-validation-for="@Model.StudentNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputUserName" class="font-weight-bold">Öğrenci İsmi</label>
                <input type="text" class="form-control" asp-for=StudenFullName id="inputTitle" disabled>
            </div>
            <div class="form-group">
                <label for="inputUserName" class="font-weight-bold">Proje</label>
                <select asp-for="@Model.ProjectId" asp-items="ViewBag.ProjectSelectListItems" class="form-control"></select>
                <span asp-validation-for="@Model.ProjectId" class="text-danger"></span>
            </div>
        }
        <div class="form-group">
            <label for="inputUserName" class="font-weight-bold">Başlık</label>
            <input type="text" class="form-control" asp-for=Title id="inputTitle" requried>
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="inputUserName" class="font-weight-bold">Açıklama</label>
            <input type="text" class="form-control" asp-for=Description id="inputTitle" requried>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="inputUserName" class="font-weight-bold">Başlangıç Tarihi</label>
            <input type="date" class="form-control" asp-for=StartDate id="inputTitle" requried>
            <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="inputUserName" class="font-weight-bold">Bitiş Tarihi</label>
            <input type="date" class="form-control" asp-for=EndDate id="inputTitle" requried>
            <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success w-100"><h3>Oluştur</h3></button>
    </form>
</div>
